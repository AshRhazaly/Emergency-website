<section class="container button-post">
    <%= link_to 'Post your emergency here', new_post_path,class: "btn btn-default btn-post" %>
</section>
<% @post.each do |post| %>
<section class="post-subject">
    <%= post.subject %>
</section>
<section class="post-name">
    Written by:
    <%= post.name %>
</section>
<section class="post-category">
    <%= post.category %>
</section>
<section class="post-content">
    <%= post.content %>
</section>
<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
<%= link_to 'Comments', post_path(post) %>
<span>&nbsp&nbsp&nbsp</span>
<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<%= link_to 'Edit', edit_post_path(post) %>
<span>&nbsp&nbsp&nbsp</span>
<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
<%= link_to 'Delete', post, method: :delete, data: {confirm: "Are you sure?"} %>
<hr/>

<% end %>
