<section class="container button-post">
    <%= link_to 'Post your emergency here', new_post_path,class: "btn btn-default btn-post" %>
</section>
<section class="post-subject">
  <%= @post.subject %>
</section>
<p> Posted on <%= @post.created_at.strftime("%m:%d:%Y") %> at <%=@post.created_at.strftime("%T") %></p>
<section class="post-name">
    Written by:
    <%= @post.name %>
</section>

<section class="post-category">
    Category:
    <%= @post.category %>
</section>
<br />
<section class="post-content">
    <%= @post.content %>
</section>
<br />
<hr />
<h4>Comments</h4>
<% @post.comments.each do |comment| %>
<section class="comment-name">
  Written by:
<%= comment.name %>
</section>
<p> Posted on <%= comment.created_at.strftime("%m:%d:%Y") %> at <%=comment.created_at.strftime("%T") %></p>
<section class="comment-content">
<%= comment.content %>
</section>
<br />
<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<%= link_to 'Edit', edit_post_comment_path(@post, comment) %>
<span>&nbsp&nbsp&nbsp</span>
<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
<%= link_to 'Delete', post_comment_path(@post, comment), method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>
<br />
<footer class="page-footer">
<%= link_to "Add a new comment", new_post_comment_path(@post), class: "btn btn-default" %>
<%= link_to "Go back", posts_path, class: "btn btn-default" %>
</footer>
